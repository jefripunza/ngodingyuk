### PERINTAH DI DALAM (MAIN RUN)
## INSTALL PKG
# WAJIB
pkg install wget -y && pkg install zip -y && pkg install git -y
pkg install php -y  && pkg install mariadb -y && pkg install apache2 -y
# pkg install python -y

# TAMBAHAN, (if development => SKIP)
# pkg install nodejs -y


clear


## Paket
# kembalikan ke home
cd

# pindah file ngodingyuk (shell) ke main home (cd) dan rename menjadi start-server
mv ~/ngodingyuk/start-server ~/start-server

# buat folder wajib
ln -s /data/data/com.termux/files/usr/share/apache2/default-site/htdocs ~/ngodingyuk/public_html
mkdir ~/.ngoding-debug && mkdir ~/.ngodingyuk

# pindahkan file ok kedalam folder .ngodingyuk
mv ~/ngodingyuk/ok ~/.ngodingyuk/ok

# buat folder tambahan (Node.JS) (if development => SKIP)
mkdir ~/ngodingyuk/project
# mkdir ~/ngodingyuk/project/reactjs
# mkdir ~/ngodingyuk/project/react-native


clear


## install phpmyadmin
# perintah wget phpmyadmin terbaru
wget https://files.phpmyadmin.net/phpMyAdmin/5.0.4/phpMyAdmin-5.0.4-all-languages.zip

# extract phpmyadmin zip
unzip phpMyAdmin-5.0.4-all-languages.zip

# hapus file phpmyadmin zip
rm phpMyAdmin-5.0.4-all-languages.zip

# rename folder yang sudah di unzip
mv ~/phpMyAdmin-5.0.4-all-languages ~/.phpmyadmin

# move config.inc.php to .phpmyadmin
mv ~/ngodingyuk/config.inc.php ~/.phpmyadmin/config.inc.php 


clear


## install ICEcoder
# git clone icecoder
git clone https://github.com/icecoder/ICEcoder.git .icecoder

# hapus file Settings.php asli
rm ~/.icecoder/classes/Settings.php

# move file Settings.php to .icecoder
mv ~/ngodingyuk/Settings.php ~/.icecoder/classes/Settings.php 


## finish (clear)
rm ~/ngodingyuk/install
rm -rf ~/ngodingyuk/.git
